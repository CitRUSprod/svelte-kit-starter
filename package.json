{
    "name": "svelte-kit-starter",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite dev --host",
        "build": "vite build",
        "build:auto": "ADAPTER=auto vite build",
        "start": "PORT=6400 node dist",
        "validate": "svelte-check --tsconfig tsconfig.json",
        "commit": "git-cz",
        "stylelint": "stylelint --color",
        "stylelint:fix": "pnpm stylelint --fix",
        "stylelint:all": "pnpm stylelint \"**/*.svelte\"",
        "stylelint:fix:all": "pnpm stylelint:all --fix",
        "eslint": "eslint --color",
        "eslint:fix": "pnpm eslint --fix",
        "eslint:all": "pnpm eslint \"**/*.{md,json,y?(a)ml,?(c)js,ts,svelte}\"",
        "eslint:fix:all": "pnpm eslint:all --fix",
        "lint": "pnpm stylelint:all && pnpm eslint:all",
        "format": "pnpm stylelint:fix:all && pnpm eslint:fix:all",
        "ci": "pnpm validate && pnpm lint",
        "prepare": "husky install"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=7"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.cjs"
        }
    },
    "lint-staged": {
        "*.svelte": "pnpm stylelint:fix",
        "*.{md,json,y?(a)ml,?(c)js,ts,svelte}": "pnpm eslint:fix"
    },
    "prettier": "./configs/prettier/index.cjs",
    "stylelint": {
        "extends": "./configs/stylelint/index.cjs",
        "ignoreFiles": [
            "**/.svelte-kit/**/*",
            "**/dist/**/*"
        ]
    },
    "eslintConfig": {
        "extends": "./configs/eslint/index.cjs",
        "ignorePatterns": [
            "!.travis.yml",
            ".svelte-kit",
            "dist",
            "pnpm-lock.yaml"
        ]
    },
    "devDependencies": {
        "@citrus-linting/eslint-config": "0.20.0",
        "@citrus-linting/prettier-config": "0.5.0",
        "@citrus-linting/stylelint-config": "0.4.0",
        "@commitlint/cli": "17.2.0",
        "@iconify/json": "2.1.139",
        "@sveltejs/adapter-auto": "1.0.0-next.88",
        "@sveltejs/adapter-node": "1.0.0-next.100",
        "@sveltejs/kit": "1.0.0-next.551",
        "@types/eslint": "8.4.10",
        "@types/node": "18.11.9",
        "@types/nprogress": "0.2.0",
        "@types/prettier": "2.7.1",
        "@typescript-eslint/eslint-plugin": "5.43.0",
        "@typescript-eslint/parser": "5.43.0",
        "@unocss/preset-wind": "0.46.5",
        "@unocss/reset": "0.46.5",
        "@unocss/transformer-directives": "0.46.5",
        "any-eslint-parser": "1.0.1",
        "commitizen": "4.2.5",
        "cz-customizable": "7.0.0",
        "eslint": "8.27.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-svelte": "2.13.0",
        "husky": "8.0.2",
        "lint-staged": "13.0.3",
        "node-fetch": "3.3.0",
        "postcss-html": "1.5.0",
        "prettier": "2.7.1",
        "prettier-plugin-svelte": "2.8.0",
        "stylelint": "14.15.0",
        "stylelint-config-prettier": "9.0.4",
        "stylelint-prettier": "2.0.0",
        "svelte": "3.53.1",
        "svelte-check": "2.9.2",
        "svelte-eslint-parser": "0.21.0",
        "svelte-preprocess": "4.10.7",
        "ts-node": "10.9.1",
        "type-fest": "3.2.0",
        "typescript": "4.8.4",
        "unocss": "0.46.5",
        "unocss-preset-better-nested-colors": "1.0.0",
        "vite": "3.2.4",
        "vite-plugin-dynamic-import": "1.2.3"
    },
    "dependencies": {
        "@rgossiaux/svelte-headlessui": "1.0.2",
        "@segment/ajv-human-errors": "2.1.2",
        "@sinclair/typebox": "0.25.8",
        "ajv": "8.11.2",
        "ajv-formats": "2.1.1",
        "ajv-keywords": "5.1.0",
        "classnames": "2.3.2",
        "nprogress": "0.2.0",
        "svelte-local-storage-store": "0.3.1",
        "sveltekit-i18n": "2.2.2",
        "tslib": "2.4.1"
    }
}
