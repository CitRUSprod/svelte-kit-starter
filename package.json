{
    "name": "svelte-kit-template",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "svelte-kit dev -p 6600",
        "build": "svelte-kit build",
        "start": "PORT=6600 node dist",
        "validate": "tsc --noEmit && svelte-check",
        "git:commit": "git-cz",
        "stylelint": "stylelint --color",
        "stylelint:fix": "pnpm stylelint -- --fix",
        "stylelint:all": "pnpm stylelint -- \"**/*.svelte\"",
        "stylelint:fix:all": "pnpm stylelint:all -- --fix",
        "eslint": "eslint --color",
        "eslint:fix": "pnpm eslint -- --fix",
        "eslint:all": "pnpm eslint -- \"**/*.{md,json,y?(a)ml,?(c)js,ts,svelte}\"",
        "eslint:fix:all": "pnpm eslint:all -- --fix",
        "lint": "pnpm stylelint:all && pnpm eslint:all",
        "format": "pnpm stylelint:fix:all && pnpm eslint:fix:all",
        "ci": "pnpm validate && pnpm lint",
        "prepare": "husky install"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.cjs"
        }
    },
    "lint-staged": {
        "*.svelte": "pnpm stylelint:fix",
        "*.{md,json,y?(a)ml,?(c)js,ts,svelte}": "pnpm eslint:fix"
    },
    "prettier": "./configs/prettier/index.cjs",
    "stylelint": {
        "extends": "./configs/stylelint/index.cjs",
        "ignoreFiles": [
            "**/.svelte-kit/**/*",
            "**/dist/**/*"
        ]
    },
    "eslintConfig": {
        "extends": "./configs/eslint/index.cjs",
        "ignorePatterns": [
            "!.travis.yml",
            ".svelte-kit",
            "dist",
            "pnpm-lock.yaml"
        ]
    },
    "postcss": {
        "plugins": {
            "tailwindcss": {
                "config": "./configs/postcss/tailwind.cjs"
            },
            "postcss-nested": {}
        }
    },
    "dependencies": {
        "@fortawesome/free-solid-svg-icons": "5.15.4",
        "nprogress": "0.2.0",
        "svelte-fa": "2.3.3",
        "svelte-local-storage-store": "0.2.4"
    },
    "devDependencies": {
        "@citrus-linting/eslint-config": "0.17.1",
        "@citrus-linting/prettier-config": "0.3.0",
        "@citrus-linting/stylelint-config": "0.2.0",
        "@commitlint/cli": "13.1.0",
        "@ota-meshi/eslint-plugin-svelte": "0.9.0",
        "@sveltejs/adapter-node": "1.0.0-next.45",
        "@sveltejs/kit": "1.0.0-next.162",
        "@types/eslint": "7.28.0",
        "@types/node": "16.7.10",
        "@types/nprogress": "0.2.0",
        "@types/prettier": "2.3.2",
        "@types/tailwindcss": "2.2.1",
        "@typescript-eslint/eslint-plugin": "4.30.0",
        "@typescript-eslint/parser": "4.30.0",
        "any-eslint-parser": "1.0.1",
        "commitizen": "4.2.4",
        "cz-customizable": "6.3.0",
        "daisyui": "1.14.0",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.2",
        "lint-staged": "11.1.2",
        "node-fetch": "3.0.0",
        "postcss": "8.3.6",
        "postcss-load-config": "3.1.0",
        "postcss-nested": "5.0.6",
        "prettier": "2.3.2",
        "prettier-plugin-svelte": "2.4.0",
        "stylelint": "13.13.1",
        "stylelint-config-prettier": "8.0.2",
        "stylelint-prettier": "1.2.0",
        "svelte": "3.42.4",
        "svelte-check": "2.2.5",
        "svelte-eslint-parser": "0.4.5",
        "svelte-preprocess": "4.8.0",
        "tailwindcss": "2.2.9",
        "typescript": "4.4.2"
    }
}
