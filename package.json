{
    "name": "svelte-kit-template",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "svelte-kit dev -p 6600",
        "build": "svelte-kit build",
        "start": "PORT=6600 node dist",
        "validate": "tsc --noEmit && svelte-check",
        "git:commit": "git-cz",
        "stylelint": "stylelint --color",
        "stylelint:fix": "pnpm stylelint -- --fix",
        "stylelint:all": "pnpm stylelint -- \"**/*.svelte\"",
        "stylelint:fix:all": "pnpm stylelint:all -- --fix",
        "eslint": "eslint --color",
        "eslint:fix": "pnpm eslint -- --fix",
        "eslint:all": "pnpm eslint -- \"**/*.{md,json,y?(a)ml,?(c)js,ts,svelte}\"",
        "eslint:fix:all": "pnpm eslint:all -- --fix",
        "lint": "pnpm stylelint:all && pnpm eslint:all",
        "format": "pnpm stylelint:fix:all && pnpm eslint:fix:all",
        "ci": "pnpm validate && pnpm lint",
        "prepare": "husky install"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.cjs"
        }
    },
    "lint-staged": {
        "*.svelte": "pnpm stylelint:fix",
        "*.{md,json,y?(a)ml,?(c)js,ts,svelte}": "pnpm eslint:fix"
    },
    "prettier": "./configs/prettier/index.cjs",
    "stylelint": {
        "extends": "./configs/stylelint/index.cjs",
        "ignoreFiles": [
            "**/.svelte-kit/**/*",
            "**/dist/**/*"
        ]
    },
    "eslintConfig": {
        "extends": "./configs/eslint/index.cjs",
        "ignorePatterns": [
            "!.travis.yml",
            ".svelte-kit",
            "dist",
            "pnpm-lock.yaml"
        ]
    },
    "postcss": {
        "plugins": {
            "postcss-windicss": {
                "config": "./configs/windicss/index.js"
            },
            "postcss-nested": {}
        }
    },
    "devDependencies": {
        "@citrus-linting/eslint-config": "0.18.0",
        "@citrus-linting/prettier-config": "0.5.0",
        "@citrus-linting/stylelint-config": "0.4.0",
        "@commitlint/cli": "16.0.2",
        "@iconify/json": "1.1.454",
        "@ota-meshi/eslint-plugin-svelte": "0.19.1",
        "@sveltejs/adapter-node": "1.0.0-next.60",
        "@sveltejs/kit": "1.0.0-next.218",
        "@types/eslint": "8.2.2",
        "@types/node": "17.0.8",
        "@types/nprogress": "0.2.0",
        "@types/prettier": "2.4.2",
        "@typescript-eslint/eslint-plugin": "5.9.0",
        "@typescript-eslint/parser": "5.9.0",
        "any-eslint-parser": "1.0.1",
        "commitizen": "4.2.4",
        "cz-customizable": "6.3.0",
        "eslint": "8.6.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.4",
        "lint-staged": "12.1.7",
        "node-fetch": "3.1.0",
        "postcss": "8.4.5",
        "postcss-html": "1.3.0",
        "postcss-load-config": "3.1.1",
        "postcss-nested": "5.0.6",
        "postcss-windicss": "1.0.0",
        "prettier": "2.5.1",
        "prettier-plugin-svelte": "2.5.1",
        "stylelint": "14.2.0",
        "stylelint-config-prettier": "9.0.3",
        "stylelint-prettier": "2.0.0",
        "svelte": "3.45.0",
        "svelte-check": "2.2.12",
        "svelte-eslint-parser": "0.9.2",
        "svelte-preprocess": "4.10.1",
        "typescript": "4.5.4",
        "unplugin-icons": "0.13.0",
        "windicss": "3.4.2"
    },
    "dependencies": {
        "classnames": "2.3.1",
        "nprogress": "0.2.0",
        "svelte-local-storage-store": "0.2.6"
    }
}
