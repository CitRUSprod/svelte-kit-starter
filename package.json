{
    "name": "svelte-kit-template",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "svelte-kit dev -p 6600",
        "build": "svelte-kit build",
        "build:auto": "ADAPTER=auto svelte-kit build",
        "start": "PORT=6600 node dist",
        "validate": "tsc --noEmit && svelte-check",
        "git:commit": "git-cz",
        "stylelint": "stylelint --color",
        "stylelint:fix": "pnpm stylelint -- --fix",
        "stylelint:all": "pnpm stylelint -- \"**/*.svelte\"",
        "stylelint:fix:all": "pnpm stylelint:all -- --fix",
        "eslint": "eslint --color",
        "eslint:fix": "pnpm eslint -- --fix",
        "eslint:all": "pnpm eslint -- \"**/*.{md,json,y?(a)ml,?(c)js,ts,svelte}\"",
        "eslint:fix:all": "pnpm eslint:all -- --fix",
        "lint": "pnpm stylelint:all && pnpm eslint:all",
        "format": "pnpm stylelint:fix:all && pnpm eslint:fix:all",
        "ci": "pnpm validate && pnpm lint",
        "prepare": "husky install"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.cjs"
        }
    },
    "lint-staged": {
        "*.svelte": "pnpm stylelint:fix",
        "*.{md,json,y?(a)ml,?(c)js,ts,svelte}": "pnpm eslint:fix"
    },
    "prettier": "./configs/prettier/index.cjs",
    "stylelint": {
        "extends": "./configs/stylelint/index.cjs",
        "ignoreFiles": [
            "**/.svelte-kit/**/*",
            "**/dist/**/*"
        ]
    },
    "eslintConfig": {
        "extends": "./configs/eslint/index.cjs",
        "ignorePatterns": [
            "!.travis.yml",
            ".svelte-kit",
            "dist",
            "pnpm-lock.yaml"
        ]
    },
    "postcss": {
        "plugins": {
            "postcss-windicss": {
                "config": "./configs/windicss/index.js"
            }
        }
    },
    "devDependencies": {
        "@citrus-linting/eslint-config": "0.18.0",
        "@citrus-linting/prettier-config": "0.5.0",
        "@citrus-linting/stylelint-config": "0.4.0",
        "@commitlint/cli": "16.0.2",
        "@iconify/json": "1.1.457",
        "@ota-meshi/eslint-plugin-svelte": "0.24.0",
        "@sveltejs/adapter-auto": "1.0.0-next.13",
        "@sveltejs/adapter-node": "1.0.0-next.66",
        "@sveltejs/kit": "1.0.0-next.235",
        "@types/eslint": "8.2.2",
        "@types/node": "17.0.9",
        "@types/nprogress": "0.2.0",
        "@types/prettier": "2.4.3",
        "@typescript-eslint/eslint-plugin": "5.10.0",
        "@typescript-eslint/parser": "5.10.0",
        "any-eslint-parser": "1.0.1",
        "commitizen": "4.2.4",
        "cz-customizable": "6.3.0",
        "eslint": "8.7.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.4",
        "lint-staged": "12.2.0",
        "node-fetch": "3.1.1",
        "postcss": "8.4.5",
        "postcss-html": "1.3.0",
        "postcss-load-config": "3.1.1",
        "postcss-windicss": "1.0.0",
        "prettier": "2.5.1",
        "prettier-plugin-svelte": "2.6.0",
        "stylelint": "14.2.0",
        "stylelint-config-prettier": "9.0.3",
        "stylelint-prettier": "2.0.0",
        "svelte": "3.46.2",
        "svelte-check": "2.3.0",
        "svelte-eslint-parser": "0.12.0",
        "svelte-preprocess": "4.10.2",
        "typescript": "4.5.4",
        "unplugin-icons": "0.13.0",
        "windicss": "3.4.3"
    },
    "dependencies": {
        "classnames": "2.3.1",
        "nprogress": "0.2.0",
        "svelte-local-storage-store": "0.2.6",
        "sveltekit-i18n": "1.5.3"
    }
}
